isbn = {8610627519},
issn = {20724292},
journal = {Remote Sensing},
keywords = {Field spectroscopy,Fraunhofer line depth (FLD),SIF calibration/validation,SIF retrieval methods,Sensor characteristics,Signal to noise ratio (SNR),Spectral resolution,Sun-induced chlorophyll fluorescence (SIF)},
number = {2},
title = {{Comparison of sun-induced chlorophyll fluorescence estimates obtained from four portable field spectroradiometers}},
