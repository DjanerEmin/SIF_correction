file = {:C$\backslash$:/Users/d.emin/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Porcar-Castell et al. - 2014 - Linking chlorophyll a fluorescence to photosynthesis for remote sensing applications mechanisms and chall.pdf:pdf},
issn = {1460-2431},
journal = {Journal of experimental botany},
keywords = {GPP,Gross primary production,PAM,PSI,PSII,PSII connectivity,SIF.,leaf level,photosynthesis dynamics,photosystem I,photosystem II,pulse amplitude modulation,remote sensing,solar-induced fluorescence,sun-induced fluorescence},
month = {aug},
number = {15},
