file = {:C$\backslash$:/Users/d.emin/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Damm et al. - 2010 - Remote sensing of sun-induced fluorescence to improve modeling of diurnal courses of gross primary production (GPP).pdf:pdf},
isbn = {1354-1013},
issn = {13541013},
journal = {Global Change Biology},
keywords = {Diurnal carbon uptake,Eddy covariance,Fluorescence yield,GPP,LUE,PRI,Remote sensing,Spectroscopy,Sun-induced fluorescence},
