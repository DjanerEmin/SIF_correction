file = {:C$\backslash$:/Users/d.emin/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Pinto et al. - 2016 - Sun-induced chlorophyll fluorescence from high-resolution imaging spectroscopy data to quantify spatio-temporal pa.pdf:pdf},
issn = {01407791},
journal = {Plant, Cell {\&} Environment},
keywords = {10.1111/pce.12710 and canopy photochemical efficie,PAR (photosynthetic active radiation),dynamic photoinhibition,imaging spectroscopy,remote sensing of vegetation,sun-induced chlorophyll fluorescence,top-of-canopy irradiance dynamics},
number = {0},
pages = {n/a--n/a},
pmid = {26763162},
title = {{Sun-induced chlorophyll fluorescence from high-resolution imaging spectroscopy data to quantify spatio-temporal patterns of photosynthetic function in crop canopies}},
